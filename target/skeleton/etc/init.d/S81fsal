#!/bin/sh

CONF_FILE=/etc/fsal.ini
PID_FILE=/var/run/fsal.pid

start() {
  [ ! -f $PID_FILE ] || exit 0
  echo -n "Starting FSAL: "
    fsal --conf "$CONF_FILE" &
    if [ $? ]; then
    echo $! > $PID_FILE
    echo "OK"
  else
    echo "FAILED"
  fi
}

stop() {
  if [ -f $PID_FILE ] ; then
    echo -n "Stopping librarian: "
    kill $(cat $PID_FILE)
    rm $PID_FILE
    echo "OK"
  fi
}

restart() {
  stop
  /bin/sleep 1
  start
}

case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  restart|reload)
    restart
    ;;
  *)
    echo "Usage: $0 {start|stop|restart|reload}"
    exit 1
esac

exit $?
